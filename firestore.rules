rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /rooms/{room} {
      // Allow users to read and create rooms if they're signed in
      allow read, create: if request.auth != null;

      // Allow updating a room if you're the owner
      allow update: if request.auth.uid == resource.data.owner

      match /viewers/{viewer} {
        // Allow users to join a room if they're signed in
        allow create: if request.auth != null;
        // Allow the owner to read and remove viewers when handled
        allow read, delete: if request.auth.uid == get(/databases/$(database)/documents/rooms/$(room)).data.owner
      }
    }
  }
}